<div id="new">
  <h2>Contact</h2>
  <div class="form-container">
  <%= form_with url: contact_index_path, method: :post do |form| %>
    <div>
      <%= form.text_field :name, placeholder: 'Your name', label:false %>
    </div>
    <div>
      <%= form.email_field :email, placeholder: 'Your email adress', label:false %>
    </div>
    <div>
      <%= form.text_area :message, placeholder: 'Your message', label:false %>
    </div>
    <div class="button-shadow-submit">
      <%= form.submit "Send" %>
    </div>
  <% end %>
  </div>
</div>
